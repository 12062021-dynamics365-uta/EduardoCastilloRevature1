@model MVC_Pet_Store.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.applicationUser.PhoneNumber, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.applicationUser.PhoneNumber, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.applicationUser.FirstName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.applicationUser.FirstName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.applicationUser.LastName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.applicationUser.LastName, new { @class = "form-control" })
        </div>
    </div>


    <h4>Pet preferences:</h4>

    <div class="form-group">
        @Html.LabelFor(m => m.applicationUser.DesiredAge, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.applicationUser.DesiredAge, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.applicationUser.DesiredPetTypeId, new { @class = "col-md-2 control-label" })
        @Html.DropDownListFor(m => m.applicationUser.DesiredPetTypeId, new SelectList(Model.petTypes, "Id", "Type"), "", new { @class = "DropDn form-control" })
        @Html.ValidationMessageFor(m => m.applicationUser.DesiredPetTypeId)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.applicationUser.DesiredColorId, new { @class = "col-md-2 control-label" })
        @Html.DropDownListFor(m => m.applicationUser.DesiredColorId, new SelectList(Model.colors, "Id", "ColorName"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.applicationUser.DesiredColorId)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.applicationUser.DesiredGenderId, new { @class = "col-md-2 control-label" })
        @Html.DropDownListFor(m => m.applicationUser.DesiredGenderId, new SelectList(Model.genders, "Id", "GenderName"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.applicationUser.DesiredGenderId)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.applicationUser.OtherPreferences, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.applicationUser.OtherPreferences, new { @class = "form-control" })
        </div>
    </div>




    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


