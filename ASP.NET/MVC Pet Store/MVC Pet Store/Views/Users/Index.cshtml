@model IEnumerable<MVC_Pet_Store.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>

@if (!Model.Any())
{
    <p>No users to show.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FullName</td>
                    </tr>
                }
        </tbody>
    </table>
}