@model MVC_Pet_Store.Models.Pet

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Type: @Model.PetType.Type</li>
    <li>Breed: @Model.Breed</li>
    <li>Age: @Model.Age</li>
    <li>Color: @Model.Color.ColorName</li>
    <li>Gender: @Model.Gender.GenderName</li>
    <li>Biography: @Model.Biography</li>
</ul>

